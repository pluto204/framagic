<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="50dp"
    android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
    android:id="@+id/action_bar"
    android:background="#1e1e1e">
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="FRAMAGIC"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView" />
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/textView"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_folder"
                android:onClick="galleryPick"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_save"
                android:layout_marginRight="10dp"
                android:onClick="save"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_reload"
                android:onClick="reload"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_done"
                android:onClick="done1"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_cam"
                android:onClick="cameraPick"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_share"
                android:onClick="share"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>

